<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bjerva.tsplex"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <VideoView
        android:id="@+id/myVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <de.passsy.holocircularprogressbar.HoloCircularProgressBar
        android:id="@+id/holoCircularProgressBar1"
        android:layout_alignBaseline="@id/myVideoView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:paddingBottom="1dp"
        android:paddingRight="1dp"
        app:progress_background_color="@android:color/holo_blue_dark"
        app:progress_color="@android:color/holo_blue_bright"
        app:stroke_width="3dp" />

    <ListView
        android:id="@+id/metaList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/myVideoView"
        android:cacheColorHint="@android:color/transparent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

</RelativeLayout>